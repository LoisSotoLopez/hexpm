
<h2 class="packages-title">
  Package Reports
</h2>

<%= if @total == 0 do %>
  <div class="package-list no-results">
    <h4>No Results Found</h4>
  </div>
<% else %>
  <div>
    <%= @total %> reports found
  </div>
  <div>
    <ul>
      <%= for report <- @reports do %>
        <%= render "_package_report.html", report: report %>
      <% end %>
    </ul>
  </div>
<% end %>